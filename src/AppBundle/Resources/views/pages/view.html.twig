{% extends "AppBundle::layout.html.twig" %}

{% block title %}

            {{ trick.name }} - {{ parent() }}

{% endblock %}

{% block body %}

        <div class="container">
            <div class="col-md-6"><a href="{{ path('edit', {'id': trick.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="{{ path('delete', {'id': trick.id}) }}"><span class="glyphicon glyphicon-trash"></span></a></div>
            <h1>{{ trick.name }} by <small>{{ trick.author }}</small></h1>
            <p>Cat - ...</p>
            <h3>The {{ trick.name }} description</h3>
            <p>The {{ trick.date|date("F jS \\a\\t g:ia") }}</p>



 <h3>Image</h3>
            {% for trickImage in trick.images %}
            <img src="{{ trickImage.url }}" width="300" height="300" alt="{{ trickImage.alt }}">
            {% endfor %}
            <h3>Description :</h3>
<p>{{ trick.description }}</p>
<h3>Video</h3>
           {% for trickVideo in trick.videos %}
               {{ trickVideo.videoUrl|raw }}
            {% endfor %}
</div>
<div class="container">
<h3>Comments</h3>
{% for comments in trick.comments %}
    <p>Author : {{ comments.author }}</p>
    <p>Content : {{ comments.content }}</p>
    {% endfor %}


    <h3>Add a comment</h3>
{{   form(form)  }}
</div>

{% endblock %}
