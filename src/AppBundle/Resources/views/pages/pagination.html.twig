{% block body %}
<div class="row">
    <div class="col s6">
        <ul class="pagination">

            {# On utilise la fonction range(a, b) qui crÃ©e un tableau de valeurs entre a et b #}
            {% if nbPages > 1 %}
            {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active waves-effect"{% endif %}>
            <a href="{{ path('view',{ slug : slug }) }}/{{ p }}">{{ p }}</a>
            </li>

            {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>
{% endblock %}