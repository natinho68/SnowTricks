{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Home - {{ parent() }}
{% endblock %}

{% block body %}
    {% for trick in tricks %}
        <div class="container">
            <div class="row">
                <div class="col-md-6"><h3>{{ trick.name }} <small>By {{ trick.author }}</small></h3></div>
        {% if is_granted('ROLE_USER') %}
                <div class="col-md-6"><a href="{{ path('edit', {'id': trick.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="{{ path('delete', {'id': trick.id}) }}"><span class="glyphicon glyphicon-trash"></span></a></div>
            {% endif %}
            </div>
        <h6>{{ trick.date|date("F jS \\a\\t g:ia") }}</h6>
        <p>{{ trick.description }}</p>
            <a href="{{ path('view', {'slug': trick.slug}) }}"><button type="button" class="btn btn-default">Show the trick</button></a>
        </div><!-- /.container -->
        <hr>
        {% endfor %}

{% endblock %}