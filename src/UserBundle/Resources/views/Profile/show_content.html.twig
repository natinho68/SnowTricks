{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>{{ 'profile.show.profilePic'|trans }}: <img src="{{ asset(user.profilePic.webPath) }}" width="25" height="25"></p>
    <p><a href="{{ path('fos_user_profile_edit') }}">Edit my profile</a></p>
</div>
